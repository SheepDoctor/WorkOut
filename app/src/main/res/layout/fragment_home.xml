<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能健身助手"
                android:textColor="@color/text_primary"
                android:textSize="42sp"
                android:textStyle="bold"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="分析视频，指导动作，记录笔记"
                android:textColor="@color/text_secondary"
                android:textSize="17sp"
                android:lineSpacingExtra="6dp"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Video Analysis Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardVideoAnalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Icon Container with Apple-style background -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="#F5F0FF"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="24dp"
                        android:src="@drawable/ic_gallery"
                        android:tint="@color/primary" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:text="@string/video_analysis"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="分析抖音视频，生成健身笔记"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:alpha="0.75" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVideoAnalysis"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="28dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/analyze_video"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_gallery"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@null" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Camera Coach Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCameraCoach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardVideoAnalysis">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Icon Container -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="#F0FDF4"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="24dp"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/secondary" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:text="@string/camera_coach"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="实时动作指导，纠正姿势"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:alpha="0.75" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCameraCoach"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="28dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/start_coaching"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_camera"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@null" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- My Notes Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMyNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardCameraCoach">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Icon Container -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="#FFFEF3E0"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="24dp"
                        android:src="@drawable/ic_notes"
                        android:tint="@color/accent" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:text="@string/my_notes"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="查看和管理你的健身笔记"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:alpha="0.75" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyNotes"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="28dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/my_notes"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.01"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_notes"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/text_primary"
                    app:iconTint="@null" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

